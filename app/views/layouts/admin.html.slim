    div ng-if="!current_user"
      div ui-view=""
    div ng-if="current_user"
      #wrapper.ng-scope
        div ng-include="'admin/templates/common/navigation.html'"
        #page-wrapper.gray-bg class="dashboards dashboard_1" style=("min-height: 184px;")
          div ui-view=""
          div ng-include="'admin/templates/common/footer.html'"
    div toaster-container='' toaster-options="{'close-button': true}"